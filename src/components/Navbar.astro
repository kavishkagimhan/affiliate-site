---
const navigation = [
  { name: 'Home', href: '/' },
  { name: 'Blog', href: '/posts' },
  { name: 'Buying Guide', href: '/posts/under-desk-treadmill-buying-guide' },
];

const currentPath = Astro.url.pathname;
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-200 shadow-sm">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="text-xl font-bold text-gray-900 hover:text-sky-600 transition-colors">
        üèÉ <span class="bg-gradient-to-r from-sky-600 to-blue-600 bg-clip-text text-transparent">TreadmillCA</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navigation.map((item) => (
          <a 
            href={item.href} 
            class={`text-sm font-medium transition-colors ${
              currentPath === item.href 
                ? 'text-sky-600' 
                : 'text-gray-700 hover:text-sky-600'
            }`}
          >
            {item.name}
          </a>
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button"
        type="button"
        class="md:hidden p-2 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors"
        aria-label="Toggle menu"
      >
        <svg id="menu-open-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
        <svg id="menu-close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200 py-4">
      <div class="flex flex-col gap-4">
        {navigation.map((item) => (
          <a 
            href={item.href} 
            class={`text-sm font-medium px-4 py-2 rounded-lg transition-colors ${
              currentPath === item.href 
                ? 'bg-sky-50 text-sky-600' 
                : 'text-gray-700 hover:bg-gray-50'
            }`}
          >
            {item.name}
          </a>
        ))}
      </div>
    </div>
  </div>
</nav>


<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOpenIcon = document.getElementById('menu-open-icon');
  const menuCloseIcon = document.getElementById('menu-close-icon');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
      menuOpenIcon?.classList.toggle('hidden');
      menuCloseIcon?.classList.toggle('hidden');
    });
  }
</script>
