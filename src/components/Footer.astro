---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { name: 'Facebook', href: 'https://facebook.com', icon: 'M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z' },
  { name: 'Twitter', href: 'https://twitter.com', icon: 'M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z' },
  { name: 'LinkedIn', href: 'https://linkedin.com', icon: 'M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z' },
];

const quickLinks = [
  { name: 'Home', href: '/' },
  { name: 'Blog', href: '/posts' },
  { name: 'About', href: '/about' },
  { name: 'Contact', href: '/contact' },
];

const legalLinks = [
  { name: 'Privacy Policy', href: '/privacy' },
  { name: 'Terms of Service', href: '/terms' },
];
---

<footer class="footer relative bg-gradient-to-br from-base-200/90 via-base-100/90 to-base-200/90 text-base-content border-t border-base-300/30 backdrop-blur-xl overflow-hidden">
  <!-- Decorative background elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -bottom-40 -right-40 w-96 h-96 bg-primary/5 rounded-full blur-3xl"></div>
    <div class="absolute -top-40 -left-40 w-96 h-96 bg-secondary/5 rounded-full blur-3xl"></div>
  </div>
  
  <div class="container mx-auto px-4 lg:px-8 py-16 lg:py-20 relative z-10">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 md:gap-12 lg:gap-16 mb-12">
      <!-- Brand Section -->
      <div class="col-span-1 md:col-span-1 lg:col-span-1">
        <a href="/" class="inline-block mb-6 group">
          <h3 class="text-2xl lg:text-3xl font-extrabold group-hover:scale-105 transition-all duration-300">
            <span class="bg-gradient-to-r from-primary-600 via-primary-500 to-primary-600 bg-clip-text text-transparent animate-gradient-x">
              AffiliateSite
            </span>
          </h3>
        </a>
        <p class="text-base text-base-content/70 leading-relaxed mb-8 max-w-xs">
          Your trusted source for honest product reviews and affiliate recommendations. Making your shopping decisions easier.
        </p>
        <!-- Social Media Icons -->
        <div class="flex gap-3">
          {socialLinks.map((social) => (
            <a 
              href={social.href} 
              target="_blank" 
              rel="noopener noreferrer"
              class="footer-social-link group"
              aria-label={`Follow us on ${social.name}`}
            >
              <svg class="w-5 h-5 transition-transform duration-300 group-hover:scale-110" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d={social.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- Quick Links and Legal - 2 columns on mobile -->
      <div class="col-span-1 md:col-span-1 lg:col-span-2">
        <div class="grid grid-cols-2 gap-6 md:grid-cols-2 md:gap-12 lg:grid-cols-2 lg:gap-16">
          <!-- Quick Links -->
          <div>
            <h4 class="footer-section-title">Quick Links</h4>
            <nav class="mt-6 space-y-2.5">
              {quickLinks.map((link) => (
                <a 
                  href={link.href} 
                  class="footer-link"
                >
                  {link.name}
                </a>
              ))}
            </nav>
          </div>

          <!-- Legal Links -->
          <div>
            <h4 class="footer-section-title">Legal</h4>
            <nav class="mt-6 space-y-2.5">
              {legalLinks.map((link) => (
                <a 
                  href={link.href} 
                  class="footer-link"
                >
                  {link.name}
                </a>
              ))}
            </nav>
          </div>
        </div>
      </div>

      <!-- Newsletter/Info Section -->
      <div class="col-span-1 md:col-span-1 lg:col-span-1">
        <h4 class="footer-section-title">Stay Updated</h4>
        <p class="text-base text-base-content/70 mt-6 mb-6 leading-relaxed">
          Get the latest product reviews and exclusive recommendations delivered to your inbox.
        </p>
        <form class="flex flex-col gap-4">
          <div class="relative">
            <input 
              type="email" 
              placeholder="Enter your email" 
              class="input input-bordered w-full focus:input-primary focus:ring-2 focus:ring-primary-200 transition-all duration-300 pr-12 bg-base-100/50 backdrop-blur-sm"
              aria-label="Email address for newsletter"
              required
            />
            <svg class="w-5 h-5 absolute right-4 top-1/2 -translate-y-1/2 text-base-content/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <button type="submit" class="btn btn-primary w-full font-bold shadow-lg hover:shadow-xl hover:scale-[1.02] transition-all duration-300 group bg-primary-600 hover:bg-primary-700 text-white border-0">
            <span class="flex items-center gap-2">
              Subscribe Now
              <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </span>
          </button>
        </form>
      </div>
    </div>


    <!-- Bottom Section -->
    <div class="flex flex-col text-center items-center justify-center w-full">
      <!-- Copyright -->
        <p class="text-sm text-base-content/70">
          Copyright Â© {currentYear} <span class="font-semibold text-base-content/90">AffiliateSite</span>. All rights reserved.
        </p>
        <p class="text-xs text-base-content/60 mt-3 leading-relaxed">
          As an Amazon Associate I earn from qualifying purchases. All product recommendations are based on our honest opinions.
        </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    position: relative;
  }

  .footer-section-title {
    @apply text-sm font-bold uppercase tracking-wider text-base-content mb-2;
    letter-spacing: 0.08em;
    position: relative;
    display: inline-block;
  }

  .footer-section-title::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -4px;
    width: 30px;
    height: 2px;
    background: linear-gradient(90deg, rgb(14, 165, 233), transparent);
  }

  html[data-theme="dark"] .footer-section-title::after {
    background: linear-gradient(90deg, rgb(56, 189, 248), transparent);
  }

  .footer-link {
    @apply block text-base text-base-content/70 transition-all duration-300 py-2.5 relative;
    padding-left: 0;
  }

  .footer-link::before {
    content: '';
    @apply absolute left-0 top-1/2 w-0 h-0.5 bg-primary-500 transition-all duration-300 -translate-y-1/2;
    opacity: 0;
  }

  .footer-link:hover {
    @apply text-primary-600 translate-x-2;
    padding-left: 1rem;
  }

  html[data-theme="dark"] .footer-link:hover {
    @apply text-primary-400;
  }

  .footer-link:hover::before {
    @apply w-2;
    opacity: 1;
  }

  .footer-social-link {
    @apply flex items-center justify-center w-11 h-11 rounded-xl text-base-content/70 transition-all duration-300 relative overflow-hidden;
    background: rgba(14, 165, 233, 0.08);
    border: 1px solid rgba(14, 165, 233, 0.15);
  }

  .footer-social-link::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgb(14, 165, 233);
    transform: translate(-50%, -50%);
    transition: width 0.4s, height 0.4s;
  }

  .footer-social-link:hover::before {
    width: 200%;
    height: 200%;
  }

  .footer-social-link:hover {
    @apply text-white border-primary-500 shadow-lg;
    box-shadow: 0 4px 20px rgba(14, 165, 233, 0.3);
  }

  html[data-theme="dark"] .footer-social-link {
    background: rgba(56, 189, 248, 0.1);
    border: 1px solid rgba(56, 189, 248, 0.2);
  }

  html[data-theme="dark"] .footer-social-link::before {
    background: rgb(56, 189, 248);
  }

  html[data-theme="dark"] .footer-social-link:hover {
    @apply border-primary-400;
    box-shadow: 0 4px 20px rgba(56, 189, 248, 0.3);
  }

  .footer-social-link svg {
    position: relative;
    z-index: 1;
  }

  .footer-social-link:focus-visible {
    @apply outline outline-2 outline-offset-2;
    outline-color: rgb(14, 165, 233);
  }

  .footer-link:focus-visible {
    @apply outline outline-2 outline-offset-2 rounded px-1;
    outline-color: rgb(14, 165, 233);
  }

  /* Gradient animation for brand name */
  @keyframes gradient-x {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .animate-gradient-x {
    background-size: 200% auto;
    animation: gradient-x 3s ease infinite;
  }
</style>
