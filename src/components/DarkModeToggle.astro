<button 
  id="dark-mode-toggle"
  class="theme-toggle-button"
  aria-label="Toggle dark mode"
  type="button"
>
  <div class="theme-toggle-icon-wrapper">
    <svg id="sun-icon" class="theme-icon sun-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
      <path d="M12 18a6 6 0 1 1 0-12 6 6 0 0 1 0 12zm0-2a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM11 1h2v3h-2V1zm0 19h2v3h-2v-3zM3.515 4.929l1.414-1.414L7.05 5.636 5.636 7.05 3.515 4.93zM16.95 18.364l1.414-1.414 2.121 2.121-1.414 1.414-2.121-2.121zm2.121-14.85l1.414 1.415-2.121 2.121-1.414-1.414 2.121-2.121zM5.636 16.95l1.414 1.414-2.121 2.121-1.414-1.414 2.121-2.121zM23 11v2h-3v-2h3zM4 11v2H1v-2h3z"/>
    </svg>
    <svg id="moon-icon" class="theme-icon moon-icon hidden" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
      <path d="M10 7a7 7 0 0 0 12 4.9v.1c0 5.523-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2h.1A6.979 6.979 0 0 0 10 7zm-6 5a8 8 0 0 0 15.062 3.762A9 9 0 0 1 8.238 4.938 7.999 7.999 0 0 0 4 12z"/>
    </svg>
  </div>
</button>

<style>
  .theme-toggle-button {
    @apply relative w-11 h-11 rounded-xl flex items-center justify-center transition-all duration-300;
    @apply bg-base-200/50 hover:bg-base-200 active:scale-95;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  .theme-toggle-button::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 0.75rem;
    padding: 1px;
    background: linear-gradient(135deg, theme('colors.primary.500'), theme('colors.secondary.500'));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .theme-toggle-button:hover::before {
    opacity: 0.6;
  }

  .theme-toggle-icon-wrapper {
    position: relative;
    width: 1.25rem;
    height: 1.25rem;
  }

  .theme-icon {
    @apply w-full h-full fill-current absolute inset-0;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .sun-icon {
    @apply text-yellow-500;
    transform: rotate(0deg) scale(1);
  }

  .sun-icon.hidden {
    transform: rotate(90deg) scale(0);
  }

  .moon-icon {
    @apply text-blue-400;
    transform: rotate(-90deg) scale(0);
  }

  .moon-icon:not(.hidden) {
    transform: rotate(0deg) scale(1);
  }

  html[data-theme="dark"] .theme-toggle-button {
    @apply bg-base-300/50;
  }

  /* Add glow effect on hover */
  .theme-toggle-button:hover {
    box-shadow: 0 0 20px rgba(14, 165, 233, 0.3);
  }

  html[data-theme="dark"] .theme-toggle-button:hover {
    box-shadow: 0 0 20px rgba(56, 189, 248, 0.3);
  }
</style>

<script>
  (function() {
    const toggle = document.getElementById('dark-mode-toggle');
    const sunIcon = document.getElementById('sun-icon');
    const moonIcon = document.getElementById('moon-icon');
    
    if (!toggle || !sunIcon || !moonIcon) return;
    
    function updateIcons(theme: string) {
      if (theme === 'dark') {
        (sunIcon as HTMLElement).classList.add('hidden');
        (moonIcon as HTMLElement).classList.remove('hidden');
      } else {
        (sunIcon as HTMLElement).classList.remove('hidden');
        (moonIcon as HTMLElement).classList.add('hidden');
      }
    }
    
    // Initialize icons based on current theme
    const currentTheme = document.documentElement.getAttribute('data-theme') || 'light';
    updateIcons(currentTheme);
    
    toggle.addEventListener('click', () => {
      const currentTheme = document.documentElement.getAttribute('data-theme') || 'light';
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
      
      document.documentElement.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
      updateIcons(newTheme);
      
      // Dispatch custom event
      window.dispatchEvent(new CustomEvent('theme-change', { detail: { theme: newTheme } }));
    });
  })();
</script>

