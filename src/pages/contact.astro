---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Contact Us | Get in Touch"
  description="Have questions or suggestions? Contact us and we'll get back to you as soon as possible."
>
  <div class="container mx-auto px-4 py-16 max-w-4xl">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">Contact Us</h1>
      <p class="text-xl text-base-content/70">
        Have a question or suggestion? We'd love to hear from you!
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      <!-- Contact Form -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title mb-4">Send us a Message</h2>
          
          <form 
            action="https://formspree.io/f/YOUR_FORM_ID" 
            method="POST"
            class="space-y-4"
          >
            <div class="form-control">
              <label class="label" for="name">
                <span class="label-text">Name</span>
              </label>
              <input 
                type="text" 
                id="name"
                name="name" 
                placeholder="Your name" 
                class="input input-bordered" 
                required
              />
            </div>

            <div class="form-control">
              <label class="label" for="email">
                <span class="label-text">Email</span>
              </label>
              <input 
                type="email" 
                id="email"
                name="email" 
                placeholder="your.email@example.com" 
                class="input input-bordered" 
                required
              />
            </div>

            <div class="form-control">
              <label class="label" for="subject">
                <span class="label-text">Subject</span>
              </label>
              <input 
                type="text" 
                id="subject"
                name="subject" 
                placeholder="Message subject" 
                class="input input-bordered" 
                required
              />
            </div>

            <div class="form-control">
              <label class="label" for="message">
                <span class="label-text">Message</span>
              </label>
              <textarea 
                id="message"
                name="message" 
                class="textarea textarea-bordered h-32" 
                placeholder="Your message..."
                required
              ></textarea>
            </div>

            <div class="form-control mt-6">
              <button type="submit" class="btn btn-primary">Send Message</button>
            </div>
          </form>

          <p class="text-xs text-base-content/60 mt-4">
            Note: Replace the Formspree form action URL with your own. Sign up at 
            <a href="https://formspree.io" target="_blank" rel="noopener" class="link link-primary">
              formspree.io
            </a> to get your form ID.
          </p>
        </div>
      </div>

      <!-- Contact Information -->
      <div class="space-y-6">
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h2 class="card-title">Get in Touch</h2>
            <p class="text-base-content/70">
              We typically respond within 24-48 hours. For urgent matters, please mention 
              it in your message.
            </p>
          </div>
        </div>

        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h3 class="font-bold text-lg mb-4">Other Ways to Reach Us</h3>
            <ul class="space-y-3">
              <li class="flex items-center gap-3">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span>Email us at contact@yoursite.com</span>
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
                </svg>
                <span>Follow us on social media</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Ad Container -->
        <div class="ad-container">
          <p class="text-sm text-base-content/60 mb-2">Advertisement</p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

