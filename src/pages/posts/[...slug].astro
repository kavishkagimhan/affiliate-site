---
import PostLayout from '../../layouts/PostLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Get related posts (same category)
const allPosts = await getCollection('posts');
const relatedPosts = allPosts
  .filter((p) => p.slug !== post.slug && p.data.category === post.data.category)
  .slice(0, 3);
---

<PostLayout
  title={post.data.title}
  description={post.data.description}
  image={post.data.image}
  date={post.data.date}
  author={post.data.author}
  category={post.data.category}
  affiliateLink={post.data.affiliateLink}
  pros={post.data.pros}
  cons={post.data.cons}
>
  <Content />

  <!-- Related Posts -->
  {relatedPosts.length > 0 && (
    <section class="mt-20 pt-12 border-t-2 border-base-300/50">
      <div class="text-center mb-12">
        <div class="inline-block mb-4">
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary-100 text-primary-900 text-sm font-bold border border-primary-200">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z" clip-rule="evenodd" />
            </svg>
            You May Also Like
          </span>
        </div>
        <h2 class="text-3xl md:text-4xl font-extrabold mb-4">Related Articles</h2>
        <p class="text-lg" style="color: #6b7280;">Explore more product reviews and recommendations</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {relatedPosts.map((relatedPost, index) => (
          <article class="related-post-card group" style={`animation-delay: ${index * 0.1}s`}>
            {relatedPost.data.image && (
              <a href={`/posts/${relatedPost.slug}`} class="related-post-image-wrapper block">
                <img 
                  src={relatedPost.data.image} 
                  alt={relatedPost.data.title}
                  class="related-post-image"
                  loading="lazy"
                  width="400"
                  height="250"
                />
                <div class="related-post-overlay">
                  <svg class="w-12 h-12 text-white opacity-0 group-hover:opacity-100 transform scale-75 group-hover:scale-100 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                  </svg>
                </div>
              </a>
            )}
            <div class="related-post-content">
              {relatedPost.data.category && (
                <span class="related-post-category">{relatedPost.data.category}</span>
              )}
              <h3 class="related-post-title">
                <a href={`/posts/${relatedPost.slug}`} class="related-post-title-link">
                  {relatedPost.data.title}
                </a>
              </h3>
              <p class="related-post-description">
                {relatedPost.data.description}
              </p>
              <a href={`/posts/${relatedPost.slug}`} class="related-post-link">
                <span>Continue Reading</span>
                <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    </section>
  )}
</PostLayout>

<style>
  /* Modern Related Posts Styling */
  .related-post-card {
    @apply bg-base-100 rounded-2xl overflow-hidden shadow-lg transition-all duration-500;
    border: 1px solid transparent;
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
    transform: translateY(20px);
    padding: 0;
    margin: 0;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .related-post-card:hover {
    transform: translateY(-8px) scale(1.02);
    border-color: rgba(14, 165, 233, 0.3);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  html[data-theme="dark"] .related-post-card {
    background: rgba(30, 41, 59, 0.5);
    backdrop-filter: blur(10px);
  }

  html[data-theme="dark"] .related-post-card:hover {
    border-color: rgba(56, 189, 248, 0.5);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
  }

  .related-post-image-wrapper {
    @apply relative overflow-hidden;
    display: block;
    height: 240px;
    margin: 0;
    padding: 0;
  }

  .related-post-image {
    @apply w-full h-full object-cover;
    object-position: center;
    display: block;
    margin: 0;
    padding: 0;
  }

  .related-post-overlay {
    @apply absolute inset-0 flex items-center justify-center;
    background: linear-gradient(135deg, rgba(14, 165, 233, 0.9), rgba(2, 132, 199, 0.9));
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .related-post-card:hover .related-post-overlay {
    opacity: 1;
  }

  .related-post-content {
    @apply p-6;
  }

  .related-post-category {
    @apply inline-block px-3 py-1 mb-3 text-xs font-bold uppercase tracking-wider rounded-full;
    background-color: #dbeafe;
    color: #0c4a6e;
  }

  html[data-theme="dark"] .related-post-category {
    background-color: rgba(56, 189, 248, 0.15);
    color: #e0f2fe;
  }

  .related-post-title {
    @apply mb-3;
  }

  .related-post-title-link {
    @apply text-lg font-bold text-base-content hover:text-primary-600 transition-colors duration-300;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.4;
    text-decoration: none;
  }

  html[data-theme="dark"] .related-post-title-link:hover {
    @apply text-primary-400;
  }

  .related-post-description {
    @apply text-sm mb-4 leading-relaxed;
    color: #4b5563;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  html[data-theme="dark"] .related-post-description {
    color: #d1d5db;
  }

  .related-post-link {
    @apply inline-flex items-center gap-2 text-sm font-bold text-primary-700 hover:text-primary-800 transition-all duration-300;
    position: relative;
    text-decoration: none;
  }

  html[data-theme="dark"] .related-post-link {
    @apply text-primary-400 hover:text-primary-300;
  }

  /* Badge styling for dark mode */
  html[data-theme="dark"] .bg-primary-100 {
    background-color: rgba(56, 189, 248, 0.15);
  }

  html[data-theme="dark"] .text-primary-900 {
    color: #e0f2fe;
  }

  html[data-theme="dark"] .border-primary-200 {
    border-color: rgba(56, 189, 248, 0.3);
  }
</style>

